 <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      padding: 20px;
    }

    h2 {
      text-align: center;
    }

    .login-form {
      max-width: 300px;
      margin: 0 auto;
      background: #ffffff;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }

    .form-group input {
      width: 100%;
      padding: 5px;
      font-size: 16px;
      border-radius: 3px;
      border: 1px solid #ddd;
    }

    .switch-label {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
    }

    .switch-label input[type="radio"] {
      margin-right: 5px;
    }

    .form-submit {
      text-align: center;
    }

    .form-submit input[type="submit"] {
      padding: 10px 20px;
      font-size: 16px;
      background-color: #4CAF50;
      color: #ffffff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>